{
    "swagger": "2.0",
    "info": {
      "version": "1.1.0",
      "title": "Article Dashboard API",
      "description": "API documentation for Article Dashboard with authentication, article management, and image upload"
    },
    "host": "localhost:5000",
    "basePath": "/api",
    "schemes": ["http"],
    "paths": {
      "/auth/register": {
        "post": {
          "summary": "Register a new user",
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "role": { "type": "string", "enum": ["admin", "user"] }
                }
              }
            }
          ],
          "responses": {
            "201": { "description": "User registered successfully" },
            "500": { "description": "Internal server error" }
          }
        }
      },
      "/auth/login": {
        "post": {
          "summary": "Login a user",
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Token returned",
              "schema": {
                "type": "object",
                "properties": {
                  "token": { "type": "string" }
                }
              }
            },
            "401": { "description": "Invalid credentials" }
          }
        }
      },
      "/articles": {
        "get": {
          "summary": "Get all articles",
          "parameters": [
            {
              "in": "header",
              "name": "Authorization",
              "required": true,
              "type": "string",
              "description": "Bearer <token>"
            }
          ],
          "responses": {
            "200": {
              "description": "List of articles",
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer" },
                    "title": { "type": "string" },
                    "content": { "type": "string" },
                    "image_url": { "type": "string" }
                  }
                }
              }
            }
          }
        },
        "post": {
          "summary": "Create a new article with an image",
          "consumes": ["multipart/form-data"],
          "parameters": [
            {
              "in": "header",
              "name": "Authorization",
              "required": true,
              "type": "string",
              "description": "Bearer <token>"
            },
            {
              "in": "formData",
              "name": "title",
              "required": true,
              "type": "string",
              "description": "Title of the article"
            },
            {
              "in": "formData",
              "name": "content",
              "required": true,
              "type": "string",
              "description": "Content of the article"
            },
            {
              "in": "formData",
              "name": "image",
              "required": true,
              "type": "file",
              "description": "Image file for the article"
            }
          ],
          "responses": {
            "201": { "description": "Article created successfully" },
            "500": { "description": "Internal server error" }
          }
        }
      },
      "/articles/{id}": {
        "put": {
          "summary": "Update an article with a new image",
          "consumes": ["multipart/form-data"],
          "parameters": [
            {
              "in": "header",
              "name": "Authorization",
              "required": true,
              "type": "string",
              "description": "Bearer <token>"
            },
            {
              "in": "path",
              "name": "id",
              "required": true,
              "type": "integer",
              "description": "ID of the article"
            },
            {
              "in": "formData",
              "name": "title",
              "required": false,
              "type": "string",
              "description": "Title of the article"
            },
            {
              "in": "formData",
              "name": "content",
              "required": false,
              "type": "string",
              "description": "Content of the article"
            },
            {
              "in": "formData",
              "name": "image",
              "required": false,
              "type": "file",
              "description": "New image file for the article"
            }
          ],
          "responses": {
            "200": { "description": "Article updated successfully" },
            "404": { "description": "Article not found" },
            "500": { "description": "Internal server error" }
          }
        }
      }
    }
  }
  